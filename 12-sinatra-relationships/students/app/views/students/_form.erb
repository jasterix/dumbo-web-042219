name: <input type="text" name="student[name]" value="<%= @student.name %>"><br>
favorite movie: <input type="text" name="student[favorite_movie]" value="<%= @student.favorite_movie %>"><br>
age: <input type="number" name="student[age]" value="<%= @student.age %>"><br>
favorite band:
<select name="student[band_id]">
  <% @bands.each do |band| %>
  <option <%= band.id == @student.band_id ? "selected" : nil %> value="<%= band.id %>"><%= band.name %></option>
  <% end %>
</select>
<br>

<% if flash[:errors] %>
<ul>
  <% flash[:errors].each do |error_message| %>
  <li style="color: red;"> 
    <%= error_message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for(@student) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <%= f.label :favorite_food %>
  <%= f.text_field :favorite_food %>
  <%= f.submit %>
<% end %>
